{
	"name": "lex-gillette",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"setup": "npm ci",
		"dev": "npm-run-all watch-sass",
		"build": "npm-run-all clear-build-dir build-sass build-css build-js",
		"lint": "npm-run-all lint-scss lint-js --continue-on-error",
		"watch-sass": "sass --no-source-map --watch src/styles:build/styles",
		"build-sass": "sass --no-source-map src/styles:build/styles --style compressed",
		"build-css": "postcss --replace ./build/**/*.css",
		"build-js": "uglifyjs-folder src/scripts -eo build/scripts --extension .js",
		"lint-scss": "npx stylelint --fix src/**/*.scss",
		"lint-js": "npx eslint --fix src/**/*.js",
		"clear-build-dir": "npx cf build"
	},
	"author": "kirillsakun",
	"license": "ISC",
	"devDependencies": {
		"autoprefixer": "^9.8.8",
		"clear-folder": "^3.1.0",
		"eslint": "^8.15.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-unicorn": "^42.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.12",
		"postcss-cli": "^8.3.1",
		"postcss-preset-env": "^7.4.3",
		"sass": "^1.50.0",
		"stylelint": "^14.6.1",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-sass-guidelines": "^9.0.1",
		"stylelint-config-standard": "^25.0.0",
		"stylelint-scss": "^4.2.0",
		"uglify-js": "^3.15.3",
		"uglifyjs-folder": "^3.1.2"
	}
}
